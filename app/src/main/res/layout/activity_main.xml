<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/ic_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<ImageView
    android:id="@+id/image_restart"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:src="@drawable/restart2"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_margin="20dp"/>

    <ImageView
        android:id="@+id/iv_setting"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewStyle"
        app:cardCornerRadius="20dp"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/iv_setting">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/cardStyleKrestik_iv_1"
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_krestik" />
    <ImageView
        android:id="@+id/cardStyleNolik_iv1"
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/cardStyleKrestik_iv_1"
        android:src="@drawable/ic_nolik"/>

    <ImageView
        android:id="@+id/cardStyleKrestik_iv_2"
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:layout_constraintTop_toBottomOf="@id/cardStyleKrestik_iv_1"
        android:src="@drawable/ic_krestik_style2"/>

    <ImageView
        android:id="@+id/cardStyleNolic_iv_2"

        android:layout_width="65dp"
        android:layout_height="65dp"
        app:layout_constraintTop_toBottomOf="@id/cardStyleNolik_iv1"
        android:src="@drawable/ic_nolikk_style2"
        app:layout_constraintStart_toEndOf="@id/cardStyleKrestik_iv_2"
        />

    <ImageView
        android:id="@+id/cardStyleKrestik_iv_3"
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:layout_constraintTop_toBottomOf="@id/cardStyleKrestik_iv_2"
        android:src="@drawable/ic_krestik3"
        app:layout_constraintEnd_toStartOf="@id/cardStyleNolic_iv_3"
        />
    <ImageView
        android:id="@+id/cardStyleNolic_iv_3"
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:layout_constraintTop_toBottomOf="@id/cardStyleNolic_iv_2"
        android:src="@drawable/ic_nolil3_style"
        app:layout_constraintStart_toEndOf="@id/cardStyleKrestik_iv_2"
        />

</androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>
    <TextView
        android:textColor="@color/red"
        android:id="@+id/tv_player1"
        android:fontFamily="@font/tovari_sans_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_player2"
        android:text="@string/player1"
        android:layout_marginTop="30dp"
        android:textSize="40dp"/>

    <TextView
        android:fontFamily="@font/tovari_sans_1"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/tv_player2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/card"
        app:layout_constraintStart_toEndOf="@id/tv_player1"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/player2"
        android:textSize="40dp"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Row 1 -->
            <ImageView
                android:id="@+id/card1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/ic_1"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintVertical_chainStyle="spread"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/card2"
                app:layout_constraintBottom_toTopOf="@id/card5"/>

            <ImageView
                android:id="@+id/card2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/ic_1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/card1"
                app:layout_constraintEnd_toStartOf="@+id/card3"
                app:layout_constraintBottom_toTopOf="@id/card6"/>

            <ImageView
                android:id="@+id/card3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/ic_1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/card2"
                app:layout_constraintEnd_toStartOf="@+id/card4"
                app:layout_constraintBottom_toTopOf="@id/card7"/>

            <ImageView
                android:id="@+id/card4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/ic_1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/card3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/card8"/>

            <!-- Row 2 -->
            <ImageView
                android:id="@+id/card5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/ic_1"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintTop_toBottomOf="@id/card1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/card6"
                app:layout_constraintBottom_toTopOf="@id/card9"/>
            <ImageView
                android:id="@+id/card6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/ic_1"
                app:layout_constraintTop_toBottomOf="@id/card2"
                app:layout_constraintEnd_toStartOf="@id/card7"
                app:layout_constraintStart_toEndOf="@id/card5"
                app:layout_constraintBottom_toTopOf="@id/card10"/>
            <ImageView
                android:id="@+id/card7"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/ic_1"
                app:layout_constraintTop_toBottomOf="@id/card3"
                app:layout_constraintEnd_toStartOf="@id/card8"
                app:layout_constraintStart_toEndOf="@id/card6"
                app:layout_constraintBottom_toTopOf="@id/card11"/>
            <ImageView
                android:id="@+id/card8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/ic_1"
                app:layout_constraintTop_toBottomOf="@id/card4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/card7"
                app:layout_constraintBottom_toTopOf="@id/card12"/>

            <!-- Row 3 -->
            <ImageView
                android:id="@+id/card9"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/ic_1"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintTop_toBottomOf="@id/card5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/card10"
                app:layout_constraintBottom_toTopOf="@id/card13"/>
            <ImageView
                android:id="@+id/card10"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/ic_1"
                app:layout_constraintTop_toBottomOf="@id/card6"
                app:layout_constraintEnd_toStartOf="@id/card11"
                app:layout_constraintStart_toEndOf="@id/card9"
                app:layout_constraintBottom_toTopOf="@id/card14"/>
            <ImageView
                android:id="@+id/card11"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/ic_1"
                app:layout_constraintTop_toBottomOf="@id/card7"
                app:layout_constraintEnd_toStartOf="@id/card12"
                app:layout_constraintStart_toEndOf="@id/card10"
                app:layout_constraintBottom_toTopOf="@id/card15"/>
            <ImageView
                android:id="@+id/card12"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/ic_1"
                app:layout_constraintTop_toBottomOf="@id/card8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/card11"
                app:layout_constraintBottom_toTopOf="@id/card16"/>

            <!-- Row 4 -->
            <ImageView
                android:id="@+id/card13"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/ic_1"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintTop_toBottomOf="@id/card9"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/card14"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <ImageView
                android:id="@+id/card14"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/ic_1"
                app:layout_constraintTop_toBottomOf="@id/card10"
                app:layout_constraintEnd_toStartOf="@id/card15"
                app:layout_constraintStart_toEndOf="@id/card13"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <ImageView
                android:id="@+id/card15"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/ic_1"
                app:layout_constraintTop_toBottomOf="@id/card11"
                app:layout_constraintEnd_toStartOf="@id/card16"
                app:layout_constraintStart_toEndOf="@id/card14"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <ImageView
                android:id="@+id/card16"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/ic_1"
                app:layout_constraintTop_toBottomOf="@id/card12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/card15"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
